import xlrd
from file_dir import FileDir
def readexcel(name):
#     name=[]
    id=[]
    dict_to_list=[]
    dir_obj = FileDir()
    
    data = xlrd.open_workbook(dir_obj.app_excel_dir)
    
    table = data.sheet_by_name(name)#通过名称获取
    
    nrows = table.nrows
    # print nrows
    # ncols = table.ncols
#     name=table.row_values(0)
    
    for i in range(nrows):#nrows就是行数
        
       
        id.append(table.row_values(i))
        
    
    for j in range(1,nrows):
        dict1 = dict(zip(id[0], id[j]))
        dict_to_list.append(dict1)
    print  dict_to_list  
    return dict_to_list

    
    
    